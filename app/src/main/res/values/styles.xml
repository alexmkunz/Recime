<resources>

    <!-- Base application theme. Secondary colors are just primary colors again because I don't
         want to use the secondary color as of now. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="actionBarTheme">@style/AppTheme.DayNightActionBar</item>
        <item name="tabStyle">@style/Widget.Design.TabLayout</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.WindowAnimationTransition</item>
    </style>

    <!-- Custom theme to change the background color of the action bar in night mode. -->
    <style name="AppTheme.DayNightActionBar" parent="AppTheme">
        <item name="android:background">@color/actionBar</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>

    <!-- Fade animation for activities. These animations are used when day/night mode changes. -->
    <style name="AppTheme.WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>
