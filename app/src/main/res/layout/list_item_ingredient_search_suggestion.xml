<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/list_item_ingredient_search_suggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/searchSuggestion">

        <TextView
                android:id="@+id/list_item_ingredient_search_suggestion_recipe_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/spacing_normal"
                android:paddingTop="@dimen/spacing_normal"
                android:paddingEnd="@dimen/spacing_normal"
                android:paddingBottom="0dp"
                android:textColor="@color/searchSuggestionTitle"
                android:textSize="@dimen/font_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Recipe Name" />

        <TextView
                android:id="@+id/list_item_ingredient_search_suggestion_ingredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bottom_border"
                android:paddingStart="@dimen/spacing_normal"
                android:paddingTop="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_normal"
                android:paddingBottom="@dimen/spacing_normal"
                android:textColor="@color/searchSuggestionSubTitle"
                android:textSize="@dimen/font_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/list_item_ingredient_search_suggestion_recipe_name"
                tools:text="Includes ing. Chocolate" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>